<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.spring.model.dao.UserDao">
 	<!-- 삽입 구문 -->
 	<insert id="insertUser" parameterType="User">
 		INSERT INTO users 
 		VALUES (#{id}, #{password}, #{nickName})
 	</insert>
 	
 	<!-- 찾기 구문 -->
 	<select id="selectAllUsers">
 		SELECT * FROM users
 	</select>
 	
 	<!-- 하나만 찾기 구문 -->
 	<select id="selectUserById" parameterType="String">
 		SELECT * FROM users
 		WHERE id=#{id}
 	</select>
 	
 	<!-- 수정 구문 -->	
 	<update id="updateUser" parameterType="User">
 		UPDATE users
 		SET id=#{id}, password=#{password}, nickName=#{nickName}
 		WHERE id = #{id}
 	</update>
 	
 	<!-- 삭제 구문 -->
 	<delete id="deleteUser" parameterType="String">
 		DELETE FROM users
 		WHERE id = #{id}
 	</delete>
 </mapper>